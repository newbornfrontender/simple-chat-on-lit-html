{
  "name": "simple-chat-on-lit-html",
  "version": "1.0.0",
  "description": "Простой чат, созданный на основе Twilio Chat",
  "main": "index.html",
  "repository": "https://github.com/newbornfrontender/simple-chat-on-lit-html.git",
  "author": "Infant Frontender <newbornfrontender@gmail.com>",
  "license": "MIT",
  "private": true,
  "keywords": [
    "parcel-bundler",
    "typescript",
    "lit-html",
    "twilio-chat",
    "tslint",
    "prettier",
    "husky",
    "lint-staged"
  ],
  "scripts": {
    "clean": "rm -rf .cache,dist",
    "move": "cp -rv public/** dist",
    "stylelint": "stylelint **/*.css",
    "stylelint:check": "stylelint-config-prettier-check",
    "tslint": "tslint **/*.ts",
    "tslint:check": "tslint-config-prettier-check tslint.json",
    "tslint:fix": "yarn tslint --fix",
    "prettier:list": "prettier **/*.{css,ts} --list-different",
    "prettier:write": "prettier **/*.{css,ts} --loglevel silent --write",
    "serve": "parcel index.html",
    "build": "parcel build index.html"
  },
  "devDependencies": {
    "husky": "^1.1.3",
    "lint-staged": "^8.0.4",
    "parcel-bundler": "^1.10.3",
    "prettier": "^1.15.1",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.1.6"
  }
}
